<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/dark_orange">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_github"
        android:contentDescription="@string/footer_github_string"
        android:layout_gravity="left"/>
    <TextView
        android:theme="@style/Widget.AppCompat.ListPopupWindow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/footer_github_string"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textColor="@color/primary_text_default_material_light"
        android:id="@+id/drawer_footer_text"
        android:minHeight="@dimen/abc_action_button_min_height_material"
        android:padding="8dp"/>
</LinearLayout>